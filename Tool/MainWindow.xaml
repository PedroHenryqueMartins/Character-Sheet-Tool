<Window x:Class="FinalProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject"
        mc:Ignorable="d"
        Title="DND 5E Character Sheet Creator" Height="450" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225*"/>
            <ColumnDefinition Width="225*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="125*"/>
            <RowDefinition Height="309*"/>
        </Grid.RowDefinitions>
        <Button x:Name="bNew" Content="New"  FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Height="105" Width="205"  Background="#FF00DCFF" Click="NewPressed"/>
        <Button x:Name="bEdit" Content="Edit" FontSize="25" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="205" Height="105" Background="#FF00DCFF" Click="EditPressed"/>

    </Grid>
</Window>
